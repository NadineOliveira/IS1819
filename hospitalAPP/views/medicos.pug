extends layout

block content
    .card.text-center
        .card-header
            h1 Hospital
        nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
            a.navbar-brand(href='/pedidos?nome='+nome) Home 
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#collapsibleNavbar')
                span.navbar-toggler-icon
            #collapsibleNavbar.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/utentes?nome='+nome) Utentes
                    li.nav-item
                        a.nav-link(href='/medicos?nome='+nome) Médicos
                    li.nav-item
                        a.nav-link(href='/utilizadores?nome='+nome) Utilizadores 
        .card-body
            .container(style='text-align:center ; margin-top:60px' class="container-fluid")
                .row
                    .col
                        h1 Médicos:
                    .col-6
                        table.table
                            thead.thead-dark
                                tr
                                th ID:
                                th Nome:
                                th Telemovél:
                                th Area de Especialização:
                                th Hospital:
                            each m in medicos
                                tbody
                                    tr
                                        td=m.idMedico
                                        td=m.nome
                                        td=m.telemovel
                                        td=m.area_especializacao
                                        td=m.nomeHospital
                    .col
        .card-footer.text-center
            p HospitalApp by is_grupo7