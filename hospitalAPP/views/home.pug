extends layout

block content
    .card.text-center
        .card-header
            h1 Hospital
        nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
            a.navbar-brand(href='/pedidos') Home 
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#collapsibleNavbar')
                span.navbar-toggler-icon
            #collapsibleNavbar.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/utentes') Utentes
                    li.nav-item
                        a.nav-link(href='/medicos') MÃ©dicos
                    li.nav-item
                        a.nav-link(href='/utilizadores') Utilizadores 
        .card-body
            .container(style='text-align:center ; margin-top:60px' class="container-fluid")
                .row
                    .col
                        h1 Pedidos:
                        h4=nome
                    .col-6
                        table.table
                            thead.thead-dark
                                tr
                                th ID:
                                th Nif:
                                th Nr de Processo:
                                th Data Acidente:
                                th Tipo Acidente:
                                th Nome Seguradora:
                                th Estado:
                            each p in pedidos
                                tbody
                                    tr
                                        td=p.idPedido
                                        td=p.nif
                                        td=p.nr_processo
                                        td=p.data_acidente
                                        td=p.tipo_acidente
                                        td=p.nome_seguradora
                                        if p.estado
                                            td Concluido
                                        else
                                            td Em Processo
                    .col
                    .col
                        h3 Responder :
                        form(action='/pedidos/resposta/estado',method='POST')
                            div.form-group
                                input.form-control(type="text" id="idPedido" name="idPedido" placeholder="ID de Pedido")
                                br
                                button.btn.btn-dark(type="submit") Enviar
        .card-footer.text-center
