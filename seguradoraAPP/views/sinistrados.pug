extends layout

block content
    .card.text-center
        .card-header
            h1 Seguradora
        nav.navbar.navbar-expand-sm.bg-dark.navbar-dark
            a.navbar-brand(href='/participacoes?nome='+nome) Home 
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#collapsibleNavbar')
                span.navbar-toggler-icon
            #collapsibleNavbar.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/sinistrados?nome='+nome) Sinistrados
                    li.nav-item
                        a.nav-link(href='/seguros?nome='+nome) Seguros
                    li.nav-item
                        a.nav-link(href='/utilizadores?nome='+nome) Utilizadores 
        .card-body
            .container(style='text-align:center ; margin-top:60px' class="container-fluid")
                .row
                    .col
                        h1 Sinistrados:
                    .col-6
                        table.table
                            thead.thead-dark
                                tr
                                th Nif:
                                th Nome:
                                th Data Nascimento:
                                th Telemovel:
                            each p in sinistrados
                                tbody
                                    tr
                                        td=p.nif
                                        td=p.nome
                                        td=p.data_nasc
                                        td=p.telemovel
                    .col
        .card-footer.text-center
            p SeguradoraApp by is_grupo7